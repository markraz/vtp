# Recursive rules and macros.  All the real work is done in the
# Makefile's of $(SUBPROJECTS).

SUBPROJECTS = xmlhelper vtdata vtlib/core vtlib/vtosg

MAKE_RECURSIVE = $(SUBPROJECTS:%=$(MAKE) -C % $@;) 

RECURSIVE_TARGETS = all install uninstall clean clobber

$(RECURSIVE_TARGETS):
	$(MAKE_RECURSIVE)

.PHONY: $(RECURSIVE_TARGETS)

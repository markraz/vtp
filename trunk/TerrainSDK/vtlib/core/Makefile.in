# We only install headers.  Compilation is done in e.g. vtosg.  Might
# want to change this a bit so this subdir builds its own core lib.

# Where to install, and to find other things that we may want to
# include/link with.

prefix 		= @prefix@
includedir 	= @includedir@

# Headers to install

TARGET_HDRS 	= $(wildcard *.h)

TARGET_HDR_SUBDIR = vtlib/core

INSTALLED_HDRS  = $(TARGET_HDRS:%=$(includedir)/$(TARGET_HDR_SUBDIR)/%)

INSTALL = @INSTALL@

$(includedir)/$(TARGET_HDR_SUBDIR)/%.h: %.h
	$(INSTALL) -D $^ $@

install: $(INSTALLED_HDRS)

uninstall:
	$(RM) $(INSTALLED_HDRS)

# Nothing to do for these.

all clean clobber:

.PHONY: all install clean clobber uninstall


